<!-- TABLEAU COMPARAISON "NOUS VS EUX" -->
<!-- À intégrer dans votre thème Shopify -->

<style>
    .nous-eux-section {
        padding: 60px 20px;
        background: #FFFFFF;
    }

    .nous-eux-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .nous-eux-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 50px;
        color: #2D2D2D;
        font-weight: 700;
    }

    .comparison-table-nous-eux {
        background: #F5F5F5;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .comparison-header {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        background: transparent;
        padding: 0;
    }

    .header-cell {
        padding: 30px 20px;
        text-align: center;
        font-size: 1.8rem;
        font-weight: 700;
        color: #2D2D2D;
    }

    .header-cell.empty {
        background: transparent;
    }

    .header-cell.nous {
        background: linear-gradient(180deg, #5FB69A 0%, #4DA088 100%);
        color: white;
        border-radius: 20px 20px 0 0;
        position: relative;
    }

    .header-cell.eux {
        background: transparent;
    }

    .comparison-row {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        align-items: center;
        background: white;
        margin: 0;
        border-bottom: 1px solid #E8E8E8;
    }

    .comparison-row:last-child {
        border-bottom: none;
    }

    .feature-cell {
        padding: 35px 30px;
        font-size: 1.15rem;
        font-weight: 500;
        color: #2D2D2D;
        background: white;
    }

    .check-cell {
        padding: 35px 20px;
        text-align: center;
        position: relative;
    }

    .check-cell.nous {
        background: linear-gradient(180deg, #5FB69A 0%, #4DA088 100%);
    }

    .check-cell.eux {
        background: white;
    }

    .check-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        font-weight: bold;
    }

    .check-icon.check {
        background: white;
        color: #5FB69A;
    }

    .check-icon.cross {
        background: #E53935;
        color: white;
    }

    /* Animation au survol */
    .comparison-row {
        transition: transform 0.2s ease;
    }

    .comparison-row:hover {
        transform: scale(1.02);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        z-index: 1;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .nous-eux-title {
            font-size: 1.8rem;
            margin-bottom: 30px;
        }

        .comparison-header {
            grid-template-columns: 1.5fr 1fr 1fr;
        }

        .comparison-row {
            grid-template-columns: 1.5fr 1fr 1fr;
        }

        .header-cell {
            padding: 20px 10px;
            font-size: 1.3rem;
        }

        .feature-cell {
            padding: 25px 15px;
            font-size: 0.95rem;
        }

        .check-cell {
            padding: 25px 10px;
        }

        .check-icon {
            width: 40px;
            height: 40px;
            font-size: 1.4rem;
        }
    }

    @media (max-width: 480px) {
        .comparison-header {
            grid-template-columns: 2fr 1fr 1fr;
        }

        .comparison-row {
            grid-template-columns: 2fr 1fr 1fr;
        }

        .header-cell {
            font-size: 1.1rem;
            padding: 15px 8px;
        }

        .feature-cell {
            font-size: 0.85rem;
            padding: 20px 12px;
        }

        .check-icon {
            width: 35px;
            height: 35px;
            font-size: 1.2rem;
        }
    }
</style>

<div class="nous-eux-section">
    <div class="nous-eux-container">
        
        <!-- Titre de section (optionnel) -->
        <h2 class="nous-eux-title">Pourquoi Nous Choisir ?</h2>

        <div class="comparison-table-nous-eux">
            
            <!-- En-tête du tableau -->
            <div class="comparison-header">
                <div class="header-cell empty"></div>
                <div class="header-cell nous">Nous</div>
                <div class="header-cell eux">Eux</div>
            </div>

            <!-- Ligne 1 : Hydratation profonde -->
            <div class="comparison-row">
                <div class="feature-cell">Hydratation profonde</div>
                <div class="check-cell nous">
                    <span class="check-icon check">✓</span>
                </div>
                <div class="check-cell eux">
                    <span class="check-icon cross">✕</span>
                </div>
            </div>

            <!-- Ligne 2 : Ingrédients naturels -->
            <div class="comparison-row">
                <div class="feature-cell">Ingrédients naturels</div>
                <div class="check-cell nous">
                    <span class="check-icon check">✓</span>
                </div>
                <div class="check-cell eux">
                    <span class="check-icon cross">✕</span>
                </div>
            </div>

            <!-- Ligne 3 : Résultat anti-âge -->
            <div class="comparison-row">
                <div class="feature-cell">Résultat anti-âge</div>
                <div class="check-cell nous">
                    <span class="check-icon check">✓</span>
                </div>
                <div class="check-cell eux">
                    <span class="check-icon cross">✕</span>
                </div>
            </div>

            <!-- Ligne 4 : Sensation rafraîchissante -->
            <div class="comparison-row">
                <div class="feature-cell">Sensation rafraîchissante</div>
                <div class="check-cell nous">
                    <span class="check-icon check">✓</span>
                </div>
                <div class="check-cell eux">
                    <span class="check-icon cross">✕</span>
                </div>
            </div>

            <!-- Ligne 5 : Peau apaisée -->
            <div class="comparison-row">
                <div class="feature-cell">Peau apaisée</div>
                <div class="check-cell nous">
                    <span class="check-icon check">✓</span>
                </div>
                <div class="check-cell eux">
                    <span class="check-icon cross">✕</span>
                </div>
            </div>

        </div>

    </div>
</div>

