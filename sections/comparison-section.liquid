        font-weight: bold;
    }

    .cross {
        color: #F44336;
        font-size: 1.3rem;
        font-weight: bold;
    }

    .vs-section {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        gap: 30px;
        align-items: center;
        margin-bottom: 60px;
    }

    .vs-card {
        background: white;
        padding: 35px;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .vs-card.highlight-card {
        background: linear-gradient(135deg, #E8ACA0 0%, #F5C4B8 100%);
        color: white;
        transform: scale(1.05);
    }

    .vs-card h3 {
        font-size: 1.5rem;
        margin-bottom: 20px;
        text-align: center;
        font-weight: 600;
    }

    .vs-card ul {
        list-style: none;
        padding: 0;
    }

    .vs-card li {
        padding: 10px 0;
        padding-left: 25px;
        position: relative;
    }

    .vs-card li:before {
        content: "✓";
        position: absolute;
        left: 0;
        color: #4CAF50;
        font-weight: bold;
    }

    .vs-card.highlight-card li:before {
        color: white;
    }

    .vs-divider {
        font-size: 2rem;
        font-weight: bold;
        color: #E8ACA0;
        text-align: center;
    }

    .price-comparison {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-bottom: 60px;
    }

    .price-card {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        text-align: center;
        transition: transform 0.3s ease;
        position: relative;
    }

    .price-card:hover {
        transform: translateY(-5px);
    }

    .price-card.best {
        background: linear-gradient(135deg, #E8ACA0 0%, #F5C4B8 100%);
        color: white;
    }

    .badge {
        background: #4CAF50;
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: bold;
        position: absolute;
        top: -10px;
        right: 20px;
    }

    .price-card h4 {
        font-size: 1.3rem;
        margin-bottom: 15px;
        font-weight: 600;
    }

    .price {
        font-size: 2.5rem;
        font-weight: bold;
        margin: 20px 0;
    }

    .price-detail {
        font-size: 0.9rem;
        opacity: 0.8;
        margin-bottom: 20px;
    }

    @media (max-width: 768px) {
        .comparison-title {
            font-size: 1.8rem;
        }

        .vs-section {
            grid-template-columns: 1fr;
        }

        .vs-divider {
            transform: rotate(90deg);
        }

        .comparison-table {
            font-size: 0.85rem;
        }

        .comparison-table th,
        .comparison-table td {
            padding: 15px 10px;
        }

        .vs-card.highlight-card {
            transform: scale(1);
        }
    }
</style>

