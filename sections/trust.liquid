<div class="guarantee-section">
  <div class="guarantee-container">
    
    <div class="guarantee-content">
      <div class="guarantee-badge">
        <div class="badge-circle">
          <div class="badge-text">
            <div class="satisfaction">{{ section.settings.badge_line1 }}</div>
            <div class="days">{{ section.settings.badge_days }}</div>
            <div class="guarantee">{{ section.settings.badge_line2 }}</div>
          </div>
          <div class="stars">
            <span class="star">★</span>
            <span class="star">★</span>
            <span class="star">★</span>
          </div>
        </div>
      </div>
      
      <div class="guarantee-text">
        <h2 class="main-title">{{ section.settings.main_title }}</h2>
        <div class="description">
          <p>{{ section.settings.description1 }}</p>
          <p>{{ section.settings.description2 }}</p>
          <p>{{ section.settings.description3 }}</p>
        </div>
      </div>
    </div>
    
  </div>
</div>

<style>
.guarantee-section {
  background: linear-gradient(135deg, {{ section.settings.bg_color1 }} 0%, {{ section.settings.bg_color2 }} 100%);
  padding: {{ section.settings.section_padding }}px 20px;
  border-radius: {{ section.settings.section_radius }}px;
  margin: {{ section.settings.section_margin }}px 0;
}

.guarantee-container {
  max-width: {{ section.settings.max_width }}px;
  margin: 0 auto;
}

.guarantee-content {
  display: flex;
  align-items: center;
  gap: {{ section.settings.content_gap }}px;
  justify-content: center;
}

.guarantee-badge {
  flex-shrink: 0;
}

.badge-circle {
  width: {{ section.settings.badge_size }}px;
  height: {{ section.settings.badge_size }}px;
  border-radius: 50%;
  background: {{ section.settings.badge_bg_color }};
  border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 8px 24px rgba(0,0,0,0.15);
}

.badge-text {
  text-align: center;
  color: {{ section.settings.badge_text_color }};
  line-height: 1.1;
}

.satisfaction {
  font-size: {{ section.settings.satisfaction_size }}px;
  font-weight: {{ section.settings.text_weight }};
  letter-spacing: 1px;
  margin-bottom: 5px;
}

.days {
  font-size: {{ section.settings.days_size }}px;
  font-weight: {{ section.settings.days_weight }};
  margin: 8px 0;
  letter-spacing: 1px;
}

.guarantee {
  font-size: {{ section.settings.guarantee_size }}px;
  font-weight: {{ section.settings.text_weight }};
  letter-spacing: 1px;
  margin-bottom: 8px;
}

.stars {
  display: flex;
  gap: 2px;
  justify-content: center;
  margin-top: 5px;
}

.star {
  color: {{ section.settings.star_color }};
  font-size: {{ section.settings.star_size }}px;
  font-weight: bold;
}

.guarantee-text {
  flex: 1;
  color: {{ section.settings.text_color }};
}

.main-title {
  font-size: {{ section.settings.title_size }}px;
  font-weight: {{ section.settings.title_weight }};
  color: {{ section.settings.title_color }};
  margin-bottom: {{ section.settings.title_margin }}px;
  line-height: 1.3;
}

.description p {
  font-size: {{ section.settings.description_size }}px;
  line-height: 1.6;
  margin-bottom: {{ section.settings.paragraph_spacing }}px;
  color: {{ section.settings.description_color }};
}

.description p:last-child {
  margin-bottom: 0;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .guarantee-section {
    padding: {{ section.settings.mobile_padding }}px 15px;
    border-radius: {{ section.settings.mobile_radius }}px;
  }
  
  .guarantee-content {
    flex-direction: column;
    gap: {{ section.settings.mobile_gap }}px;
    text-align: center;
  }
  
  .badge-circle {
    width: {{ section.settings.mobile_badge_size }}px;
    height: {{ section.settings.mobile_badge_size }}px;
  }
  
  .satisfaction {
    font-size: {{ section.settings.mobile_satisfaction_size }}px;
  }
  
  .days {
    font-size: {{ section.settings.mobile_days_size }}px;
  }
  
  .guarantee {
    font-size: {{ section.settings.mobile_guarantee_size }}px;
  }
  
  .star {
    font-size: {{ section.settings.mobile_star_size }}px;
  }
  
  .main-title {
    font-size: {{ section.settings.mobile_title_size }}px;
  }
  
  .description p {
    font-size: {{ section.settings.mobile_description_size }}px;
  }
}

/* Animation */
@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.badge-circle {
  animation: bounceIn 0.8s ease-out;
}

.guarantee-text {
  animation: slideInRight 0.8s ease-out 0.3s both;
}
</style>

